 <menuitem id="imp_main_menu" name="Easy Import menuitem" icon="STOCK_MEDIA_PLAY" sequence="50"/>
        <menuitem id="imp_instances" parent="imp_main_menu" name="Import xxx instances action"  />

 <menuitem
            action="action_imp_show_instances"
            id="imp_instances_menu"
            parent="imp_instances"
            />




  </data>
</openerp>
