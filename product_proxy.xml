                                           </table>
							              </td>
						            	</tr>

						            	<tr>
						            	  <td colspan="3">
						            			 <group>
						            			     <field name="type" />
						            			     <field name="country"  />
					            			     </group>
							              </td>

							              
								          
					                	</tr>
					                	<tr>
					                	  <td colspan="4">
						                		    <!-- <div>
