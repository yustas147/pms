                			<field name="virtual_type"/>
                			<field name="proxy_id"/>
                			<field name="virt_stock"/>
                		</group>
                			<field name="proxy_ids">
                			    <tree>
		                			<field name="supplier_id"/>
		                			<field name="quantity"/>
		                			<field name="price"/>
		                		</tree>
                			</field>
                	</page>
                </xpath>
            </field>
